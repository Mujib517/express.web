<br/>
<form method="POST" action="/products/new">
    <div class="row">
        <div class="col-md-5">
            <div class="form-group">
                <input type="file" placeholder="Upload Image" />
            </div>
            <div class="form-group">
                <select class="form-control" name="brand">
                    <option>Nokia</option>
                    <option>Apple</option>
                    <option>Sony</option>
                    <option>Samsung</option>
                </select>
            </div>
            <div class="form-group">
                <input type="text" placeholder="Model" class="form-control" name="model" />
            </div>
            <div class="form-group">
                <input type="number" placeholder="Price" class="form-control" name="price" />
            </div>
            <div class="form-group">
                InStock:
                <input type="checkbox" name="inStock" />
            </div>
            <div class="form-group">
                Red:
                <input type="radio" value="red" name="color" /> Black:
                <input type="radio" value="black" name="color" /> Gray:
                <input type="radio" value="gray" name="color" />
            </div>
            <div class="form-group">
                <button class="btn btn-primary">Save Product</button>
            </div>
        </div>
    </div>
</form>